{
    "name": "comsave/salesforce-outbound-message-tower-bundle",
    "description": "Listen & process Salesforce broadcasted outbound messages in development.",
    "homepage": "https://github.com/comsave/salesforce-outbound-message-bundle",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Comsave\\": "src/Comsave/"
        }
    },
    "require": {
        "php": ">=7.2.0",
        "ext-SimpleXML": "^7.3",
        "guzzlehttp/guzzle": "^6.4",
        "symfony/config": "^3.4|^4.3",
        "symfony/console": "^3.4|^4.3",
        "symfony/dependency-injection": "^3.4|^4.3",
        "symfony/dotenv": "^3.4|^4.3",
        "symfony/http-kernel": "^3.4|^4.3",
        "symfony/yaml": "^3.4|^4.3"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^6.0",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "run-tests": "vendor/bin/phpunit --no-coverage",
        "run-coverage": "vendor/bin/phpunit --coverage-clover tests/_output/coverage.xml",
        "run-coverage-text": "vendor/bin/phpunit --coverage-text=tests/_output/coverage.txt && cat tests/_output/coverage.txt"
    },
    "authors": [
        {
            "name": "Vaidas",
            "email": "vaidas.bagdonas@comsave.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
